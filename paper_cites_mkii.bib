@article{kharin_changes_2007,
	title = {Changes in {Temperature} and {Precipitation} {Extremes} in the {IPCC} {Ensemble} of {Global} {Coupled} {Model} {Simulations}},
	volume = {20},
	issn = {0894-8755},
	doi = {10.1175/JCLI4066.1},
	abstract = {Temperature and precipitation extremes and their potential future changes are evaluated in an ensemble of global coupled climate models participating in the Intergovernmental Panel on Climate Change (IPCC) diagnostic exercise for the Fourth Assessment Report (AR4). Climate extremes are expressed in terms of 20-yr return values of annual extremes of near-surface temperature and 24-h precipitation amounts. The simulated changes in extremes are documented for years 2046–65 and 2081–2100 relative to 1981–2000 in experiments with the Special Report on Emissions Scenarios (SRES) B1, A1B, and A2 emission scenarios. Overall, the climate models simulate present-day warm extremes reasonably well on the global scale, as compared to estimates from reanalyses. The model discrepancies in simulating cold extremes are generally larger than those for warm extremes, especially in sea ice–covered areas. Simulated present-day precipitation extremes are plausible in the extratropics, but uncertainties in extreme precipitation in the Tropics are very large, both in the models and the available observationally based datasets. Changes in warm extremes generally follow changes in the mean summertime temperature. Cold extremes warm faster than warm extremes by about 30\%–40\%, globally averaged. The excessive warming of cold extremes is generally confined to regions where snow and sea ice retreat with global warming. With the exception of northern polar latitudes, relative changes in the intensity of precipitation extremes generally exceed relative changes in annual mean precipitation, particularly in tropical and subtropical regions. Consistent with the increased intensity of precipitation extremes, waiting times for late-twentieth-century extreme precipitation events are reduced almost everywhere, with the exception of a few subtropical regions. The multimodel multiscenario consensus on the projected change in the globally averaged 20-yr return values of annual extremes of 24-h precipitation amounts is that there will be an increase of about 6\% with each kelvin of global warming, with the bulk of models simulating values in the range of 4\%–10\% K−1. The very large intermodel disagreements in the Tropics suggest that some physical processes associated with extreme precipitation are not well represented in models. This reduces confidence in the projected changes in extreme precipitation.},
	number = {8},
	urldate = {2017-05-05},
	journal = {Journal of Climate},
	author = {Kharin, Viatcheslav V. and Zwiers, Francis W. and Zhang, Xuebin and Hegerl, Gabriele C.},
	month = apr,
	year = {2007},
	keywords = {core\_scaling\_argument, rainfall\_amount\_intensity},
	pages = {1419--1444},
	annote = {- generally looks at IPCC 4AR models and how they deal with precipitation and temperature extremes , including changes through global warming and comparisons to reanalysis data- using IPCC AR4 CGCM models, with SRES forcings (B1, A1b, A2) - uses GEV fits at every grid point to annual temperature and precipitation extremes samples to get quantiles of annual extremes distributions, return values are defined at being above that. KS tests were used to see differences between empirical and fitted cumulative distributions, generally a reasonable approximation for a distribution of annual extreme of the considered variables in most models. - definition of x-year return value == threshold that is exceeded by an annual extreme in any given year with the probability p = 1/x, so a 20-year return value is the level that an annual extreme exceeds with probability p = 5\%. Conversely, x is the ‘rarity’ of an extreme event, the return period. - changes in precipitation extremes are skewed right - wider upper tails, shorter lower tails especially in tropics, but also in extra tropics (not surprising since precipitation is non-negatively defined). - much less decrease in the 20-year return value than in, say, our CCSM3 {\textgreater}10 year data. These are also intermodal medians, so… In general this paper has similar maps to us. - In {\textbar} 10-40 {\textbar} degrees lat, mean precip changes are small or negative, but magnitudes of extreme precip go up a lot more. Elsewhere, mean and extreme precipitations increase similarly. Only in arctic do relative changes in mean precip exceed extreme precip changes (we see this in some places as well, but also th opposite - that North Atlantic thing, i.e.) - ‘fractional increases in the intensity of precipitation extremes generally exceed those for mean precipitation. ‘ - this is the close to CC relation. - large inter-model spread in tropical precipitation extreme changes, therefore ‘reduces our confidence’- “model differences, rather than sampling error, appear to be the main source of uncertainty in the simulated late-twentieth-century temperature and precipitation extremes in the considered multimodal ensemble.’” Especially in precipitation extremes - generally intermodal differences.},
	file = {Full Text PDF:/Users/kschwarzwald/Library/Application Support/Zotero/Profiles/hah7io1h.default/zotero/storage/R7993XQ8/Kharin et al. - 2007 - Changes in Temperature and Precipitation Extremes .pdf:application/pdf;Snapshot:/Users/kschwarzwald/Library/Application Support/Zotero/Profiles/hah7io1h.default/zotero/storage/3AFD97F5/JCLI4066.html:text/html}
}

@article{groisman_changes_1999,
