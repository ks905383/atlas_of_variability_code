@article{byrne_response_2015,
	title = {The {Response} of {Precipitation} {Minus} {Evapotranspiration} to {Climate} {Warming}: {Why} the “{Wet}-{Get}-{Wetter}, {Dry}-{Get}-{Drier}” {Scaling} {Does} {Not} {Hold} over {Land}},
