@article{seager_does_2011,
	title = {Does {Global} {Warming} {Cause} {Intensified} {Interannual} {Hydroclimate} {Variability}?},
	volume = {25},
	issn = {0894-8755},
	doi = {10.1175/JCLI-D-11-00363.1},
	abstract = {The idea that global warming leads to more droughts and floods has become commonplace without clear indication of what is meant by this statement. Here, the authors examine one aspect of this problem and assess whether interannual variability of precipitation P minus evaporation E becomes stronger in the twenty-first century compared to the twentieth century, as deduced from an ensemble of models participating in Coupled Model Intercomparison Project 3. It is shown that indeed interannual variability of P − E does increase almost everywhere across the planet, with a few notable exceptions such as southwestern North America and some subtropical regions. The variability increases most at the equator and the high latitudes and least in the subtropics. Although most interannual P − E variability arises from internal atmosphere variability, the primary potentially predictable component is related to the El Niño–Southern Oscillation (ENSO). ENSO-driven interannual P − E variability clearly increases in amplitude in the tropical Pacific, but elsewhere the changes are more complex. This is not surprising in that ENSO-driven P − E anomalies are primarily caused by circulation anomalies combining with the climatological humidity field. As climate warms and the specific humidity increases, this term leads to an intensification of ENSO-driven P − E variability. However, ENSO-driven circulation anomalies also change, in some regions amplifying but in others opposing and even overwhelming the impact of rising specific humidity. Consequently, there is sound scientific basis for anticipating a general increase in interannual P − E variability, but the predictable component will depend in a more complex way on both thermodynamic responses to global warming and on how tropically forced circulation anomalies alter.},
	number = {9},
	urldate = {2017-05-05},
	journal = {Journal of Climate},
	author = {Seager, Richard and Naik, Naomi and Vogel, Laura},
	month = dec,
	year = {2011},
	keywords = {core\_scaling\_argument, rainfall\_amount\_intensity},
	pages = {3355--3372},
	annote = {- “Indeed, for countries such as Pakistan, where whole communities were washed away in the 2010 monsoon floods, it makes little sense to adapt to a multidecadal time-scale trend when the countries’ infrastructure is so severely stressed by already-existing (dominantly natural) year-to-year variability.”- “As Sarachik says, mitigation addresses climate trends, but adaptation is about climate variability.”- “However, if this is so on short time scales of days or less, the same process should work on inter annual time scales…” - talking about stuff dependent on atmospheric humidity, since ENSO also driven by changes in climatological humidity field. - Models show a widespread but not universal increase in the amplitude of total inter annual variability of P-E, ENSO-driven component, but there’s other stuff going on involving changes in circulation variability offsetting changes in increasing humidity. - 19 models from CMIP3- Using monthly data to allow a bigger range of models and longer range of data within models- Mainly focuses on ‘leading mode of global P-E variability’, ENSO- conclusion: amplitude of total inter annual P-E variability increases almost everywhere, highest (40\%) over equatorial pacific, high latitudes, with closer to 10\% elsewhere. Inter annual P-E variability weakens over E subtropical PE, SW NA, subtropical Atlantic. Spatial pattern somewhat akin to pattern of climatological P-E change. - …bunch of stuff on ENSO- Interannual time scales, hydroclimate variability intensifications confirmed to be true},
	file = {Full Text PDF:/Users/kschwarzwald/Library/Application Support/Zotero/Profiles/hah7io1h.default/zotero/storage/HBEW3I4G/Seager et al. - 2011 - Does Global Warming Cause Intensified Interannual .pdf:application/pdf;Snapshot:/Users/kschwarzwald/Library/Application Support/Zotero/Profiles/hah7io1h.default/zotero/storage/VBETSUMH/JCLI-D-11-00363.html:text/html}
}

