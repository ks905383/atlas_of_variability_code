@article{pendergrass_changes_2014,
	title = {Changes in the {Distribution} of {Rain} {Frequency} and {Intensity} in {Response} to {Global} {Warming}},
	volume = {27},
	issn = {0894-8755},
	doi = {10.1175/JCLI-D-14-00183.1},
	abstract = {Changes in the frequency and intensity of rainfall are an important potential impact of climate change. Two modes of change, a shift and an increase, are applied to simulations of global warming with models from phase 5 of the Coupled Model Intercomparison Project (CMIP5). The response to CO2 doubling in the multimodel mean of CMIP5 daily rainfall is characterized by an increase of 1\% K−1 at all rain rates and a shift to higher rain rates of 3.3\% K−1. In addition to these increase and shift modes of change, some models also show a substantial increase in rainfall at the highest rain rates called the extreme mode of response to warming. In some models, this extreme mode can be shown to be associated with increases in grid-scale condensation or gridpoint storms.},
	number = {22},
	urldate = {2017-01-19},
	journal = {Journal of Climate},
	author = {Pendergrass, Angeline G. and Hartmann, Dennis L.},
	month = sep,
	year = {2014},
	keywords = {core\_scaling\_argument, rainfall\_amount\_intensity},
	pages = {8372--8383},
	annote = {Looks at daily precipitation in 22 CMIP5 models, proposes a combination of two effects to explain changes in daily precipitation distributions:
1) "Shift mode" - same total amount of rain, but it falls in fewer, more intense rates ("fixed \% higher")
2) "Increase mode" - same frequency, but more rain per event, again a fixed \% higher.
They fit these two to model response to CO2 warming. Claims the "shift" is 3.3\%/K, "increase" is 1\%/K in response to CO2 doubling.
Additionally says that some models have increases of extreme precip that closely follow shift+increase fitted to the overall distribution, but other models produce much bigger increases in extreme precipitation than the expected shift + increase (the "Extreme mode"). They say this is probably related to "gridpoint storms" - crazy high precipitation in individual grid points, probably due to model-world issues.
In conclusion, with warming rainfall shifts to higher rain rates, but at a smaller rate than the increase in moisture/extreme events. High rate of increase of extreme precipitation not associated with changes in the rest of the distribution.
 },
	file = {Full Text PDF:/Users/kschwarzwald/Library/Application Support/Zotero/Profiles/hah7io1h.default/zotero/storage/EM4274TP/Pendergrass and Hartmann - 2014 - Changes in the Distribution of Rain Frequency and .pdf:application/pdf;Snapshot:/Users/kschwarzwald/Library/Application Support/Zotero/Profiles/hah7io1h.default/zotero/storage/ZUKMNGBE/JCLI-D-14-00183.html:text/html}
}

